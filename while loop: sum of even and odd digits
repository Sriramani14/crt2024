while loop
sum of even and odd digits

#include <stdio.h>

int main() {
  int n,d,s1=0,s2=0;
  scanf("%d",&n);
  while(n>0){
      d=n%10;
      n=n/10;
      if(d%2==0){
          s1=s1+d;
      }
      else{
          s2=s2+d;
      }
     
  }
  
  printf("even:%d\n",s1);
   printf("odd:%d\n",s2);
    return 0;
}
