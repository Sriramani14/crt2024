#include <stdio.h>

int main() {
    int i,k,j;
    for(i=1;i<=6;i++){
        for(k=i;k<=5;k++){
            printf(" ");
        }
        for(j=1;j<=i;j++){
            printf("* ");
        }
        printf("\n");
    }
    for(i=5;i>=1;i--){
        for(k=i;k<=5;k++){
            printf(" ");
        }
        for(j=1;j<=i;j++){
            printf("* ");
        }
        printf("\n");
    }

    
}


output:

     * 
    * * 
   * * * 
  * * * * 
 * * * * * 
* * * * * * 
 * * * * * 
  * * * * 
   * * * 
    * * 
     * 
