switch statement
add/sub/mul/div

#include <stdio.h>
#include<math.h>
int main() {
 int a,b;
 scanf("%d%d",&a,&b);
 int c;
 printf("choose a number 1 to 4:\n");
 scanf("%d",&c);
 switch(c){
     case 1:
     printf("addition:%d",a+b);
     break;
     case 2:
     printf("subtraction:%d",a-b);
     break;
     case 3:
     printf("multiplication:%d",a*b);
     break;
     case 4:
     printf("division:%d",a/b);
     break;
     default:
     printf("invalid");
     break;
 }
}
